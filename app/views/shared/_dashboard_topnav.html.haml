%header.navbar{:role=>"banner"}
  .container
    .navbar-header
      = link_to authenticated_root_url, class: ["navbar-brand", "navbar-brand-img"] do
        = image_tag("mvptheme/admin/logo.png")
    %nav.collapse.navbar-collapse{:role => "navigation"}
      %ul.nav.navbar-nav.navbar-left
        %li.dropdown.navbar-notification
          = link_to "/", class: ["dropdown-toggle"] do
            %i.fa.fa-bell.navbar-notification-icon
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown.navbar-profile
          = link_to "#", class: ["dropdown-toggle"], "data-toggle" => "dropdown", "aria-expanded" => false do
            = image_tag("mvptheme/admin/avatar-4-sm.jpg", :class => "navbar-profile-avatar")
            %span.visible-xs-inline @brettbim
            %i.fa.fa-caret-down
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to user_path(current_user) do
                %i.fa.fa-user
                My Profile
            %li
              = mail_to "brettbim1+d2ml4cqlpw6phvtupwjl@boards.trello.com" do
                %i.fa.fa-user
                Report a bug or suggestion
            %li.divider
            %li
              = link_to(destroy_user_session_path, :method => :delete) do
                %i.fa.fa-sign-out
                Logout


