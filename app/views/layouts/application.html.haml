!!! HTML
%html
  %head
    %title JohnBunker
    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :integrity => "sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", :crossorigin => "anonymous"}
    %link{:rel=>"stylesheet", :href=>"https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,800,800italic"}
    %link{:rel=>"stylesheet", :href=>"https://fonts.googleapis.com/css?family=Oswald:400,300,700"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag theme_stylesheet, media: 'all', 'data-turbolinks-track' => true
    %script{src: "https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"}
    %script{src: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity: "sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin: "anonymous"}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true 
    = csrf_meta_tags 
  %body
    #wrapper
      - if user_signed_in? 
        = render :partial => "shared/dashboard_topnav"
        = render :partial => "shared/mainnav"
        .content
          .container
            .layout.layout-stack-sm.layout-main-left
              .col-sm-7.col-md-8.layout-main
                = yield 
              .col-sm-5.col-md-4.layout-sidebar
                "placeholder"
      - else
        = render :partial => "layouts/topnavbar"
        = yield
