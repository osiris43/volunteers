.portlet.portlet-default
  .portlet-header
    %h4.portlet-title
      Volunteer Hours
.portlet-body
  .row
    .col-sm-6.col-md-3
      .row-stat
        %p.row-stat-label
          Hours this month
        .row-stat-value
          %h3 
            = @monthsHours
        %span.label.label-success.row-stat-badge
          = "#{@monthChange}%"
    .col-sm-6.col-md-3
      .row-stat
        %p.row-stat-label
          Hours this quarter
        .row-stat-value
          %h3 
            = @quarterHours
        %span.label.label-success.row-stat-badge
          = "#{@quarterChange}%"
    .col-sm-6.col-md-3
      .row-stat
        %p.row-stat-label
          Hours this year
        .row-stat-value
          %h3 
            = @monthsHours
        %span.label.label-success.row-stat-badge
          +43%
