%h2 Yearly Report
%br
%br


.portlet.portlet-default
  .portlet-header
    %h4.portlet-title
      Hours By Activity This Year (#{@year_start.strftime("%b %e, %Y")} - #{@year_end.strftime("%b %e, %Y")})
.portlet-body
  %table{:id => "hours_activity_table", "class" => "table table-striped table-bordered table-hover ui-datatable", 
  "data-info"=>"true", "data-global-search"=>"false", 
  "data-length-change"=>"false"}
    %thead
      %tr
        %th Activity
        %th Total Hours This Year 
      - @activities.each do |activity|
        %tr
          %td= activity.name
          %td= activity.total_hours